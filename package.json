{
  "name": "test-app",
  "homepage": "https://sky172839465.github.io/test-app/",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "react-scripts": "2.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test::unit": "CI=true react-scripts test --coverage --env=jsdom",
    "functional::local": "npm run start:selenium && codeceptjs run --steps --config=./codecept/local.config.js",
    "functional::browserstack:online": "npm run start:selenium && codeceptjs run --steps --config=./codecept/bs.config.js",
    "functional::browserstack:local": "export IS_TEST_LOCAL=true; npm run functional::browserstack",
    "start:selenium": "selenium-standalone start > /dev/null 2>&1 &",
    "kill:selenium": "lsof -t -i :4444 | xargs kill",
    "deploy::beta": "npm run build && cp CNAME build/CNAME && surge ./build && npm run delete::build",
    "deploy::prod": "npm run build && gh-pages -d build && npm run delete::build",
    "delete::build": "rm -r build",
    "eject": "react-scripts eject",
    "lint": "standard --fix | snazzy"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "codeceptjs": "^1.4.6",
    "codecov": "^3.1.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.5",
    "gh-pages": "^2.0.1",
    "selenium-standalone": "^6.15.4",
    "snazzy": "7.1.1",
    "standard": "11.0.1",
    "surge": "^0.20.1",
    "webdriverio": "^4.14.1"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/__e2e__/**/*",
      "!src/(App|index|serviceWorker|setupTests).js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "standard": {
    "ignore": [
      "build/*",
      "registerServiceWorker.js"
    ],
    "env": {
      "browser": true,
      "jest": true
    },
    "parser": "babel-eslint",
    "globals": [
      "actor",
      "Feature",
      "Scenario"
    ]
  }
}
